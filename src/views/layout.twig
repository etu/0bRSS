<!DOCTYPE html>
<html>
    <head>
        <title>0bRSS</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8" />

        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" />
        <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans" />
        <link rel="stylesheet" href="{{ baseUrl() }}/assets/css/style.css" />
    </head>
    <body>
        <header id="pageheader">
            {% if not hide_aside %}
                <button id="show-aside-button" class="fa fa-bars"></button>
            {% endif %}

            0bRSS

            {% if not hide_header_menu %}
                {# Button to open and close the right hand side menu #}
                <button id="header-menu-button" class="fa fa-ellipsis-v"></button>

                {# Right hand side menu itself #}
                <nav id="header-menu">
                    <a href="{{ baseUrl() }}/logout"><i class="fa fa-sign-out"></i> Logout</a>
                </nav>
            {% endif %}
        </header>

        {% if not hide_aside %}
            <aside id="aside-menu">
                <nav>
                </nav>
            </aside>
        {% endif %}

        <div id="content"{{ hide_aside ? ' class="fullwidth"' }}>
            {{ block('content') }}
        </div>
    </body>


    {# Start feed-menu-handlebars-template #}
    <script id="feed-menu-template" type="text/x-handlebars-template">
        {% verbatim %}
            <i class="fa fa-rss-square"></i> {{name}} <span class="unread">{{unread}}</span>
        {% endverbatim %}
    </script>
    {# End feed-menu-handlebars-template #}

    {# Start news-card-handlebars-template #}
    <script id="news-card-template" type="text/x-handlebars-template">
        {% verbatim %}
            <header>
                {{{title}}}
                <span class="extras">
                    <!-- <i class="fa fa-star"></i> Icons for future usage <i class="fa fa-star-o"></i> -->
                    <a href="{{{uri}}}" target="_blank" class="fa fa-external-link"></a>
                </span>
            </header>
            <p>
                {{{body}}}
            </p>
            <footer>
                {{date}} {{read}} {{starred}}
            </footer>
        {% endverbatim %}
    </script>
    {# End news-card-handlebars-template #}



    {# Set API-URI so JS can use it #}
    <script>window.ZerobRSS = { apiUri: '{{ baseUrl() }}/api' };</script>

    {# Include Scripts #}
    <script src="//ajax.googleapis.com/ajax/libs/mootools/1.5.1/mootools-yui-compressed.js"></script>
    <script src="//cdn.jsdelivr.net/handlebarsjs/3.0.3/handlebars.min.js"></script>

    {# JS Classes #}
    <script src="{{ baseUrl() }}/assets/js/Router.js"></script>
    <script src="{{ baseUrl() }}/assets/js/Feeds.js"></script>
    <script src="{{ baseUrl() }}/assets/js/ArticleLoader.js"></script>
    <script src="{{ baseUrl() }}/assets/js/Scroll.js"></script>
    <script src="{{ baseUrl() }}/assets/js/Keyboard.js"></script>

    {# Misc layout functions #}
    <script src="{{ baseUrl() }}/assets/js/header-menu.js"></script>
    <script src="{{ baseUrl() }}/assets/js/aside-menu.js"></script>

    {# Init the classes, set up listeners and so on for the client to work #}
    <script src="{{ baseUrl() }}/assets/js/init.js"></script>
</html>
